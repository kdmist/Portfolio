---
import Layout from '../layouts/Layout.astro';

const myIntroduction = "I'm a passionate software developer with a knack for creating elegant and efficient solutions. With over 3 years of experience in web development and cloud-native applications, I thrive on tackling complex challenges and continuously learning new technologies. My goal is to leverage my skills to build impactful software that makes a difference.";

const mySkills = [
  "JavaScript (ES6+)",
  "TypeScript",
  "React",
  "Node.js",
  "Astro",
  "Tailwind CSS",
  "Python",
  "Git & GitHub",
  "REST APIs",
  "CI/CD"
];

const name = "Antony Kiplagat";
const profileImageUrl = "/images/Tony.jpg"; // Ensure this image is in the `public/images/` folder
const resumeUrl = "/path-to-your-resume.pdf"; // Replace with actual path
const defaultProfileImage = "https://via.placeholder.com/400";
const finalProfileImageUrl = profileImageUrl || defaultProfileImage;
---

<Layout>
  <main>
    <section
      id="about"
      class="min-h-screen flex items-center justify-center py-16 px-6 bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white text-center"
    >
      <div class="max-w-4xl w-full">
        <div class="flex flex-col items-center gap-8">
          

          <div>
            <h2 class="mt-0 text-4xl lg:text-5xl font-bold mb-4 tracking-tight">
              Hello, I'm <span class="text-purple-400">{name}</span>
            </h2>
            <p class="text-lg md:text-xl text-slate-300 mb-6 leading-relaxed">
              {myIntroduction}
            </p>
          </div>

          <div class="mb-6">
            <h3 class="text-2xl font-semibold text-purple-300 mb-4">
              My Skillset
            </h3>
            <div class="flex flex-wrap justify-center gap-3">
              {
                mySkills.map(skill => (
                  <span class="bg-purple-600/70 text-purple-100 text-sm font-medium px-4 py-2 rounded-full shadow-md hover:bg-purple-500/90 transition-colors duration-300 cursor-default">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          {
            resumeUrl && (
              <a
                href={resumeUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-8 rounded-lg shadow-lg transition-transform duration-300 ease-in-out hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-50"
              >
                Download My Resume
              </a>
            )
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
