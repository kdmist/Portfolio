---
import Styles "../"
---

<nav class="fixed top-5 left-1/2 transform -translate-x-1/2 w-4/5 bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 shadow-lg p-4">
  <div class="flex justify-between items-center">
    <a href="/" class="text-xl font-bold">Logo</a>
    <button id="nav-toggle" class="lg:hidden p-2 focus:outline-none" aria-label="Toggle menu">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>
  
  <ul id="nav-menu" class="hidden lg:flex flex-col lg:flex-row lg:space-x-6 text-center lg:text-left mt-4 lg:mt-0 transition-all duration-300">
    <li><a href="#" class="block py-2 px-4 hover:bg-white/20 rounded">Home</a></li>
    <li><a href="#" class="block py-2 px-4 hover:bg-white/20 rounded">About</a></li>
    <li><a href="#" class="block py-2 px-4 hover:bg-white/20 rounded">Services</a></li>
    <li><a href="#" class="block py-2 px-4 hover:bg-white/20 rounded">Portfolio</a></li>
    <li><a href="#" class="block py-2 px-4 hover:bg-white/20 rounded">Contact</a></li>
  </ul>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const navToggle = document.getElementById("nav-toggle");
    const navMenu = document.getElementById("nav-menu");

    navToggle.addEventListener("click", function () {
      navMenu.classList.toggle("hidden");
    });

    // Close menu when clicking outside
    document.addEventListener("click", function (event) {
      if (!navMenu.contains(event.target) && !navToggle.contains(event.target)) {
        navMenu.classList.add("hidden");
      }
    });
  });
</script>
